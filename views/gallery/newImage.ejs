<%- include("../partials/galleryHeader") %>

<div class="container ">
    <div class="row">
        <h1 class="col-sm-12" style="padding-top: 3%; text-align: center;">Welcome, Moshood Abiola Badmus</h1>

        <div class="col-sm-12" style="padding-top: 3%;">
            <div style="width: 30%; margin: 0 auto;">
                <form action="/gallery" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Image URL">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="caption" placeholder="Enter Image Caption">
                    </div>
                    <div class="form-group">
                            <select class="form-control" id="category" name="category">
                                <option value="beauty">Beauty</option>
                                <option value="portrait">Portraits</option>
                                <option value="pre-wedding">Pre-wedding</option>
                                <option value="products">Products</option>
                                <option value="studio-shoot">Studio shoot</option>
                                <option value="wedding">Wedding</option>
                            </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/mux-media/logout">Logout</a>
            </div>
        </div>
    </div>


</div>


<%- include("../partials/galleryFooter") %>