                b.css("paddingTop", "45%");
            });
            c.hover(function(e){
                b.css("paddingTop", "45%")
            });
            a.mouseout(function(e){
                b.css("paddingTop", "35%");
            });
            c.mouseout(function(e){
                b.css("paddingTop", "35%");
            });
        }else {
            a.hover(function(){
                b.css("paddingTop", "60%");
            });
            c.hover(function(){
                b.css("paddingTop", "60%")
            });
            a.mouseout(function(){
                b.css("paddingTop", "45%");
            });
            c.mouseout(function(){
                b.css("paddingTop", "45%");
            });
        }
