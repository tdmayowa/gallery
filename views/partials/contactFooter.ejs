        if (e) {
            a.hover(function(e){
                b.css("paddingTop", "12%");
            });
            c.hover(function(e){
                b.css("paddingTop", "12%")
            });
            a.mouseout(function(e){
                b.css("paddingTop", "12%");
            });
            c.mouseout(function(e){
                b.css("paddingTop", "12%");
            });
        }else if (f){
